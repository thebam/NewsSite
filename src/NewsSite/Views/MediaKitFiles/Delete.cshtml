@model NewsSite.Models.MediaKitFileViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Are you sure you want to delete this media kit file?</h2>
<div>
    <form asp-action="Delete">
        <dl class="dl-horizontal">
            <div class="row">
                <div class="col-md-4">
                    @Html.Raw(Model.IconURL)
                </div>
                <div class="col-md-8">
                    <dt>
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt>
                        Media Author
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Owner.Name)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.CopyrightDate)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CopyrightDate)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DateCreated)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.DateModified)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DateModified)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Enabled)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Enabled)
                    </dd>
                </div>
            </div>
        </dl>
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            <a  class="btn btn-default" asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
